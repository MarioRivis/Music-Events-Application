<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterController">
    <VBox alignment="CENTER" layoutX="2.0" layoutY="27.0" prefHeight="400.0" prefWidth="600.0" spacing="10.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <TextField fx:id="nameTextField" layoutX="210.0" layoutY="145.0" maxWidth="-Infinity" prefWidth="200.0"
                   promptText="Nume"/>

        <TextField fx:id="emailTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Email">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        </TextField>
        <TextField fx:id="passwordTextField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0"
                   promptText="Parola"/>
        <TextField fx:id="confirmPasswordTextField" layoutX="210.0" layoutY="198.0" maxWidth="-Infinity"
                   prefHeight="25.0" prefWidth="200.0" promptText="Confirmare Parola"/>
        <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#onCreateAccountClick"
                text="Creaza Cont"/>
    </VBox>
    <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <padding>
            <Insets right="10.0" top="10.0"/>
        </padding>
        <Button fx:id="goToLoginPage" mnemonicParsing="false" onAction="#onGoToLoginPageClick" text="Spre Log in"/>
    </HBox>
</AnchorPane>
