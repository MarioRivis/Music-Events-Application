<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterController">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="200.0">
            <Label text="Înregistrare" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
        </HBox>
        <GridPane alignment="CENTER" hgap="20.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="225.0" right="60.0" top="10.0" />
            </padding>
            <TextField fx:id="nameTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Nume" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="0">
                <GridPane.margin>
                    <Insets />
                </GridPane.margin>
            </TextField>
            <Label fx:id="nameErrorLabel" text="* Camp Obligatoriu" textFill="#eb2222" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <TextField fx:id="emailTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Email" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="emailErrorLabel" text="* Camp Obligatoriu" textFill="#eb2222" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <TextField fx:id="passwordTextField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" promptText="Parola" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="passwordErrorLabel" text="* Camp Obligatoriu" textFill="#eb2222" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <TextField fx:id="confirmPasswordTextField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" promptText="Confirmare Parola" GridPane.rowIndex="3" />
            <Label fx:id="confirmPasswordErrorLabel" text="* Camp Obligatoriu" textFill="#eb2222" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <ComboBox prefWidth="150.0" promptText="Tip utilizator" GridPane.rowIndex="4" />
        </GridPane>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
            <Label text="Adresă de mail folosită!" textFill="#eb2222" />
        </HBox>
        <HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0" spacing="30.0">
            <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#onCreateAccountClick" prefWidth="100.0" text="Crează Cont" />
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="6.0">
                <Label text="Ai deja un cont?" />

                <Button fx:id="goToLoginPage" mnemonicParsing="false" onAction="#onGoToLoginPageClick" prefWidth="100.0" text="Log in" />
            </VBox>
        </HBox>
    </VBox>
     <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="445.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0">
         <Button mnemonicParsing="false" text="Continuă fără înregistrare" />
     </HBox>
</AnchorPane>
