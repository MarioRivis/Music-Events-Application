<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" stylesheets="@../css/stylesheet.css" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditArtistProfilePageController">
    <GridPane gridLinesVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" maxWidth="345.0" minWidth="10.0" prefWidth="200.0"/>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="10.0" prefWidth="500.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
        </rowConstraints>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0">
            <Button mnemonicParsing="false" onAction="#onGoToStartPageButtonClick" text="Spre pagina de start"
                    textAlignment="CENTER">
                <VBox.margin>
                    <Insets left="10.0" top="10.0"/>
                </VBox.margin>
            </Button>
            <ImageView fx:id="profilePhoto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <VBox alignment="TOP_CENTER" prefHeight="215.0" prefWidth="200.0" spacing="15.0" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <Label text="Poți încărca o fotografie diferită"/>
                <Button mnemonicParsing="false" onAction="#onChoosePhotoButtonClick" text="Alege fișier">
                    <VBox.margin>
                        <Insets top="-10.0"/>
                    </VBox.margin>
                </Button>
                <TextField fx:id="nameField" alignment="CENTER" promptText="Nume Artist">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                </TextField>
                <CheckBox fx:id="bandCheckBox" mnemonicParsing="false" onAction="#onSelectBandCheckBoxClick"
                          text="Formație"/>
                <HBox prefHeight="0.0" prefWidth="200.0"/>
            </VBox>
            <HBox alignment="CENTER" prefHeight="5.0" prefWidth="200.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" top="10.0"/>
                </padding>
                <VBox.margin>
                    <Insets top="-15.0"/>
                </VBox.margin>
                <Button mnemonicParsing="false" onAction="#onSaveChangesButtonClick" text="Salvează modificări"
                        textAlignment="CENTER"/>
            </HBox>
        </VBox>
        <GridPane alignment="CENTER" GridPane.columnIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" prefWidth="500.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="332.0" minHeight="10.0" prefHeight="234.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="241.0" minHeight="10.0" prefHeight="166.0" vgrow="SOMETIMES"/>

            </rowConstraints>
            <GridPane fx:id="scheduleGridPane" alignment="CENTER" gridLinesVisible="true" prefHeight="177.0"
                      prefWidth="480.0" GridPane.rowIndex="1">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </GridPane.margin>
            </GridPane>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <HBox alignment="CENTER_LEFT" prefHeight="60.0">
                    <Label text="Adresa de email">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="emailField" alignment="CENTER" disable="true" promptText="example@email.com"
                               text="example@email.com">
                        <HBox.margin>
                            <Insets left="42.0"/>
                        </HBox.margin>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0">
                    <Label text="Tipul de utilizator">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="userTypeField" alignment="CENTER" disable="true" promptText="Tip Utilizator"
                               text="Tip Utilizator">
                        <HBox.margin>
                            <Insets left="20.0"/>
                        </HBox.margin>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0">
                    <Label text="Genul muzical">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="genreField" promptText="Genul muzical">
                        <HBox.margin>
                            <Insets left="38.0"/>
                        </HBox.margin>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="500.0" spacing="30.0">
                    <Label fx:id="bandMembersLabel" text="Membrii formației">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextArea fx:id="bandMembersField" prefHeight="200.0" prefWidth="200.0"
                              promptText="Numele membrilor formației">
                        <HBox.margin>
                            <Insets bottom="5.0" top="5.0"/>
                        </HBox.margin>
                    </TextArea>
                </HBox>
                <HBox>
                    <Label text="Orar disponibilitate:">
                        <HBox.margin>
                            <Insets left="10.0"/>
                        </HBox.margin>
                    </Label>
                </HBox>
            </VBox>
        </GridPane>
    </GridPane>
</AnchorPane>
