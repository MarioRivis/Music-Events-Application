<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditArtistProfilePageController">
    <children>
        <GridPane gridLinesVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" maxWidth="345.0" minWidth="10.0" prefWidth="200.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="10.0" prefWidth="500.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0">
                    <children>
                        <ImageView fx:id="profilePhoto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                        <VBox alignment="TOP_CENTER" prefHeight="215.0" prefWidth="200.0" spacing="15.0"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <Label text="Poți încărca o fotografie diferită"/>
                                <Button fx:id="choosePhotoButton" mnemonicParsing="false" text="Alege fișier"/>
                                <TextField fx:id="userNameField" alignment="CENTER" promptText="Nume Utilizator">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </VBox.margin>
                                </TextField>
                                <Label text="Alege tipul de artist">
                                    <VBox.margin>
                                        <Insets bottom="-10.0"/>
                                    </VBox.margin>
                                </Label>
                                <ChoiceBox fx:id="chooseArtistType" prefWidth="150.0">
                                    <VBox.margin>
                                        <Insets bottom="-5.0"/>
                                    </VBox.margin>
                                </ChoiceBox>
                                <HBox prefHeight="0.0" prefWidth="200.0"/>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER" prefHeight="5.0" prefWidth="200.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" top="10.0"/>
                            </padding>
                            <children>
                                <Button fx:id="saveChangesButton" mnemonicParsing="false" text="Salvează modificări"
                                        textAlignment="CENTER"/>
                            </children>
                            <VBox.margin>
                                <Insets top="-15.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
                <GridPane alignment="CENTER" GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" prefWidth="500.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="332.0" minHeight="10.0" prefHeight="234.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="241.0" minHeight="10.0" prefHeight="166.0" vgrow="SOMETIMES"/>

                    </rowConstraints>
                    <children>
                        <GridPane fx:id="scheduleGridArtist" alignment="CENTER" gridLinesVisible="true"
                                  prefHeight="177.0" prefWidth="480.0" GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </GridPane>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="60.0">
                                    <children>
                                        <Label text="Adresa de email">
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="emailField" alignment="CENTER" disable="true"
                                                   promptText="example@email.com" text="example@email.com">
                                            <HBox.margin>
                                                <Insets left="42.0"/>
                                            </HBox.margin>
                                        </TextField>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0">
                                    <children>
                                        <Label text="Tipul de utilizator">
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="userTypeField" alignment="CENTER" disable="true"
                                                   promptText="Tip Utilizator" text="Tip Utilizator">
                                            <HBox.margin>
                                                <Insets left="20.0"/>
                                            </HBox.margin>
                                        </TextField>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0">
                                    <children>
                                        <Label text="Genul muzical">
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="genreField" promptText="Genul muzical">
                                            <HBox.margin>
                                                <Insets left="38.0"/>
                                            </HBox.margin>
                                        </TextField>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="500.0" spacing="30.0">
                                    <children>
                                        <Label text="Membrii formației">
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Label>
                                        <TextArea fx:id="bandMembersField" prefHeight="200.0" prefWidth="200.0"
                                                  promptText="Numele membrilor formației">
                                            <HBox.margin>
                                                <Insets bottom="5.0" top="5.0"/>
                                            </HBox.margin>
                                        </TextArea>
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label text="Orar disponibilitate:">
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
            </children>
        </GridPane>
        <!--        <Separator orientation="VERTICAL" prefHeight="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="494.0" AnchorPane.topAnchor="0.0" />-->
    </children>
</AnchorPane>
