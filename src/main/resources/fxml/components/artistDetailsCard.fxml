<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="artistDetailsCardVBox" styleClass="card" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="artistNameLabel" styleClass="card-title" text="Artist Name" />
    <VBox layoutX="32.0" layoutY="109.0" spacing="20.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label styleClass="title-label" text="Genul muzical:" />
            <Label fx:id="genreLabel" text="gen" />
        </HBox>
      <HBox fx:id="bandMembersHBox" spacing="10.0">
         <children>
            <Label text="Membrii formatiei:" />
            <Label fx:id="bandMemebersLabel" text="membrii" />
         </children>
      </HBox>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </VBox>
    <Separator fx:id="actionButtonsSeparator" />
    <HBox fx:id="actionButtonsHBox" alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="goToProfilePageButton" defaultButton="true" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" styleClass="button-raised" text="Vezi pagina de profil" />
    </HBox>
    <stylesheets>
        <URL value="@../../css/material-fx-v0_3.css" />
        <URL value="@../../css/stylesheet.css" />
    </stylesheets>
</VBox>
