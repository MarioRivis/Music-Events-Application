<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="chatHeaderHBox" alignment="CENTER" spacing="10.0" styleClass="card" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">

    <VBox.margin>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </VBox.margin>
    <HBox alignment="CENTER">
        <ImageView fx:id="profilePictureImage" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../Images/defaultUserPhoto.png" />
            <viewport>
                <Rectangle2D />
            </viewport>
        </ImageView>
    </HBox>
    <HBox alignment="CENTER" GridPane.rowIndex="1">
        <Label fx:id="nameLabel" text="Name ">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
    </HBox>

    <stylesheets>
        <URL value="@../../css/material-fx-v0_3.css" />
        <URL value="@../../css/stylesheet.css" />
    </stylesheets>
</VBox>
