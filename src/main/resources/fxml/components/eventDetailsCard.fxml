          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
        <HBox spacing="20.0">
            <Label styleClass="title-label" text="Nume local:"/>
            <Label fx:id="barNameLabel" text="Nume Local value"/>
        </HBox>
        <HBox spacing="20.0">
            <Label text="Nume artist:"/>
            <Label fx:id="artistNameLabel" text="Nume Artist value"/>
        </HBox>
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </VBox>
    <Separator/>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Button fx:id="showDetailsButton" mnemonicParsing="false" styleClass="button-flat" text="Detalii"/>
    </HBox>
    <stylesheets>
        <URL value="@../../css/material-fx-v0_3.css"/>
        <URL value="@../../css/stylesheet.css"/>
    </stylesheets>
