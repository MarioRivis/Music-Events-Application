<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
     <HBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
         <Label styleClass="title-label" text="Log In" textAlignment="CENTER">
             <font>
                 <Font size="30.0" />
             </font>
         </Label>
     </HBox>

    <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <GridPane alignment="CENTER" hgap="20.0" vgap="12.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints />
            </rowConstraints>
            <padding>
                <Insets left="280.0" right="60.0" top="10.0" />
            </padding>

            <TextField fx:id="emailTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Email" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="emailErrorLabel" styleClass="error-label" text="* Camp Obligatoriu" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <PasswordField fx:id="passwordTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Parola" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="passwordErrorLabel" styleClass="error-label" text="* Camp Obligatoriu" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        </GridPane>
        <HBox alignment="CENTER">
            <Label fx:id="incorrectCredentialsError" styleClass="error-label" text="Adresă de email și/sau parolă incorecte!" />
        </HBox>
        <HBox alignment="BOTTOM_CENTER" spacing="30.0">
            <Button mnemonicParsing="false" onAction="#onLoginClick" prefWidth="105.0" styleClass="button-raised" text="Logare" />
            <VBox alignment="TOP_CENTER" spacing="10.0">
                <Label text="Nu ai cont?" />

                <Button mnemonicParsing="false" onAction="#onGoToRegisterPageClick" styleClass="button-raised" text="Înregistrează-te!" />
            <HBox.margin>
               <Insets />
            </HBox.margin>
            </VBox>
        </HBox>
    </VBox>
    <HBox alignment="BOTTOM_RIGHT" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0">
        <Button defaultButton="true" mnemonicParsing="false" onAction="#onSkipPageButtonClick" styleClass="button-raised" text="Continuă fără logare" />
    </HBox>
   <stylesheets>
      <URL value="@../../css/material-fx-v0_3.css" />
      <URL value="@../../css/stylesheet.css" />
      <URL value="@../../css/errors.stylesheet.css" />
   </stylesheets>

</AnchorPane>
