<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <VBox alignment="CENTER" layoutY="14.0" prefHeight="386.0" prefWidth="652.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
            <Label text="Log in" textAlignment="CENTER">
                <font>
                    <Font size="20.0" />
                </font>
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
            </Label>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
        <GridPane alignment="CENTER" hgap="20.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints />
            </rowConstraints>
            <padding>
                <Insets left="240.0" right="60.0" top="10.0" />
            </padding>

            <TextField fx:id="emailTextField" maxWidth="-Infinity" prefWidth="200.0" promptText="Email" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="emailErrorLabel" text="* Camp Obligatoriu" textFill="#eb2222" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <PasswordField fx:id="passwordTextField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" promptText="Parola" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="passwordErrorLabel" text="* Camp Obligatoriu" textFill="#eb2222" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        </GridPane>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
            <Label fx:id="incorrectCredentialsError" text="Adresă de email și/sau parolă incorecte!" textFill="#eb2222" />
        </HBox>
        <HBox alignment="CENTER" prefHeight="70.0" spacing="30.0">
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginClick" prefWidth="105.0" text="Logare" />
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="110.0" spacing="6.0">
                <Label text="Nu ai cont?" />

                <Button fx:id="goToRegisterPage" mnemonicParsing="false" onAction="#onGoToRegisterPageClick" prefWidth="105.0" text="Înregistrează-te!" />
            </VBox>
        </HBox>
    </VBox>
     <HBox alignment="BOTTOM_RIGHT" prefHeight="30.0" prefWidth="445.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0">
         <Button fx:id="continueWithoutLoginButton" mnemonicParsing="false" onAction="#onSkipPageButtonClick" text="Continuă fără logare" />
     </HBox>

</AnchorPane>
